{% extends 'base.html.twig' %}

{% block title %}Rubrique{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Détail de la rubrique</h1>
        <a href="{{ path('app_rubrique_index') }}" class="btn btn-success">Retour à la liste</a>
    </div>

    <table class="table table-bordered table-hover table-striped align-middle shadow-sm rounded overflow-hidden table-pink">
        <thead style="background-color: #FFD2EB;">
            <tr>
                <th class="text-center">Nom</th>
                <th class="text-center">Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center align-middle">{{ rubrique.nom }}</td>
                <td class="text-center align-middle">{{ rubrique.description }}</td>
                <td class="text-center align-middle" style="width: 180px;">
                    <div class="d-flex flex-column gap-2">
                        <a class="btn btn-outline-secondary w-100" href="{{ path('app_rubrique_edit', {'id': rubrique.id}) }}">Modifier</a>
                        {{ include('rubrique/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
