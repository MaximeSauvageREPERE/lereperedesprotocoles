{% extends 'base.html.twig' %}

{% block title %}Edit Rubrique{% endblock %}

{% block body %}
    <div class="card shadow-sm mb-4">
        <div class="card-header text-center" style="background-color: #FFD2EB;">
            <h2 class="mb-0">Modifier la rubrique</h2>
        </div>
        <div class="card-body">
            {{ include('rubrique/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
        <div class="card-footer d-flex justify-content-end gap-2 bg-white">
            <a href="{{ path('app_rubrique_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
            <button type="submit" form="rubrique_form" class="btn btn-primary">Mettre à jour</button>
            {{ include('rubrique/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
