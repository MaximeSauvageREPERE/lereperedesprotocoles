    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rubrique in rubriques %}
            <tr>
                <td>{{ rubrique.id }}</td>
                <td>{{ rubrique.nom }}</td>
                <td>{{ rubrique.description }}</td>
                <td>
                    <a href="{{ path('app_rubrique_show', {'id': rubrique.id}) }}">show</a>
                    <a href="{{ path('app_rubrique_edit', {'id': rubrique.id}) }}">edit</a>
                </td>
            </tr>
