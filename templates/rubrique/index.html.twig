{% extends 'base.html.twig' %}

{% block title %}Liste des Rubrique{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center mb-3 p-3">
        <h1 class="mb-0">Liste des rubriques</h1>
        <a href="{{ path('app_rubrique_new') }}" class="btn btn-success">Ajouter une rubrique</a>
    </div>

    <table class="table table-bordered table-hover table-striped align-middle shadow-sm rounded overflow-hidden rounded-4">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Nom</th>
                <th class="text-center">Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rubrique in rubriques %}
            <tr>
                <td class="text-center">{{ rubrique.nom }}</td>
                <td class="text-center">{{ rubrique.description }}</td>
                <td class="text-center">
                    <div class="d-flex flex-row justify-content-center align-items-center gap-1">
                        <a href="{{ path('app_rubrique_show', {'id': rubrique.id}) }}" class="btn btn-outline-primary">Voir</a>
                        <a href="{{ path('app_rubrique_edit', {'id': rubrique.id}) }}" class="btn btn-outline-warning">Modifier</a>
                        {{ include('rubrique/_delete_form.html.twig', { 'rubrique': rubrique }) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center fst-italic">Aucune rubrique trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
