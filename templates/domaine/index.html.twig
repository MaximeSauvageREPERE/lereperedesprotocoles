{% extends 'base.html.twig' %}

{% block title %}Domaine index{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des domaines</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domaine in domaines %}
            <tr>
                <td>{{ domaine.nom }}</td>
                <td>{{ domaine.description }}</td>
                <td>
                    <a href="{{ path('app_domaine_show', {'id': domaine.id}) }}">Voir</a>
                    <a href="{{ path('app_domaine_edit', {'id': domaine.id}) }}">Modifier</a>
                    {{ include('domaine/_delete_form.html.twig', { 'domaine': domaine }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun domaine trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_domaine_new') }}">Ajouter un domaine</a>
{% endblock %}
