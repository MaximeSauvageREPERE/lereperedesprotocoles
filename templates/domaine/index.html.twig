{% extends 'base.html.twig' %}

{% block title %}Liste des Domaines{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center mb-3 rounded-4 p-3">
        <h1 class="mb-0">Liste des domaines</h1>
        <a href="{{ path('app_domaine_new') }}" class="btn btn-success">Ajouter un domaine</a>
    </div>

    <table class="table table-bordered table-hover table-striped align-middle shadow-sm rounded overflow-hidden rounded-4">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Nom</th>
                <th class="text-center">Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domaine in domaines %}
            <tr>
                <td class="text-center">{{ domaine.nom }}</td>
                <td class="text-center">{{ domaine.description }}</td>
                <td class="text-center">
                    <div class="d-flex flex-row justify-content-center align-items-center gap-1">
                        <a href="{{ path('app_domaine_show', {'id': domaine.id}) }}" class="btn btn-outline-primary">Voir</a>
                        <a href="{{ path('app_domaine_edit', {'id': domaine.id}) }}" class="btn btn-outline-secondary">Modifier</a>
                        {{ include('domaine/_delete_form.html.twig', { 'domaine': domaine }) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center fst-italic">Aucun domaine trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
