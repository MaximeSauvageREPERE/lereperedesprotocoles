<form method="post" action="{{ path('app_theme_delete', {'id': theme.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le thème {{ theme.nom }} ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</form>
