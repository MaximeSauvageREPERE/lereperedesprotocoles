{% extends 'base.html.twig' %}

{% block title %}Modifier Thème{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3 p-3">
        <h1 class="mb-0">Modifier un thème</h1>
        <a href="{{ path('app_theme_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
    <div class="card shadow-sm mb-4 bg-light">
        <div class="card-body">
            {{ include('theme/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
        <div class="card-footer d-flex justify-content-end gap-2 bg-light">
            <button type="submit" form="theme_form" class="btn btn-outline-primary">{{ 'Mettre à jour' }}</button>
            {{ include('theme/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
